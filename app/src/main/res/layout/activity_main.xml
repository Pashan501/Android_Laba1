<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity"
        android:visibility="visible" android:background="#FAFAFA">
    <ImageView

            android:layout_width="180dp"
            android:layout_height="100dp" app:srcCompat="@drawable/flag"
            android:id="@+id/imageView5"
            app:layout_constraintBottom_toBottomOf="@+id/myName"
            android:layout_marginBottom="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="215dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="130dp"/>

    <ImageView
            android:layout_width="500px"
            android:layout_height="250px" app:srcCompat="@drawable/rectangle"
            android:id="@+id/imageView"
            tools:srcCompat="@drawable/rectangle" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="111dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="110dp" android:layout_marginTop="38dp"
            app:layout_constraintTop_toBottomOf="@+id/myName" android:layout_marginBottom="216dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#5C3C97"
            android:text="@string/myName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/myName"
            app:layout_constraintHorizontal_bias="0.498" tools:text="@string/myName"
            android:textSize="24sp" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>